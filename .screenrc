# Turn off the welcome message
startup_message off

# Disable visual bell
vbell off

# Set scrollback buffer to 10000
defscrollback 10000

shelltitle 'bash'

# mouse tracking allows to switch region focus by clicking
mousetrack on

#Enable scrollbar
termcapinfo xterm* ti@:te@

truecolor on

# Customize the status line
hardstatus alwayslastline

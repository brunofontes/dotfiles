	name = Bruno Fontes
	signingkey = EE3447CE80048495
[color]
    all = true
    ui = true
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = green
    remote = red
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = red
    untracked = yellow
[url "git@github.com:"]
    insteadOf = https://github.com/
[push]
	default = matching
[commit]
	gpgsign = true
	verbose = true
[gpg]
	program = gpg
[init]
	templatedir = ~/.git_template
[core]
    editor = vim
    excludesfile = ~/dotfiles/.gitignore_global

# ======== Including Delta (git/diff formatting) configuration ======
    #pager = delta --dark --24-bit-color "never" --theme='zenburn'
    #pager = delta --dark --plus-color="#012800" --minus-color="#340001" --theme='Monokai Extended'
    pager = delta --dark --theme='Monokai Extended'
	excludesfile = /home/bruno/dotfiles/.gitignore_global
	quotepath = false
	commitGraph = true

[interactive]
    diffFilter = delta --color-only
# ======== Including Delta (git/diff formatting) configuration ======
[gc]
	writeCommitGraph = true
